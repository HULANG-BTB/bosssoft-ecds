<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosssoft.ecds.template.mapper.PrintTemplateMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bosssoft.ecds.template.entity.po.PrintTemplatePo">
        <id column="f_id" property="id" />
        <result column="f_rgn_code" property="rgnCode" />
        <result column="f_sort_id" property="sortId" />
        <result column="f_type_id" property="typeId" />
        <result column="f_agen_id_code" property="agenIdCode" />
        <result column="f_place_id" property="placeId" />
        <result column="f_name" property="name" />
        <result column="f_template" property="template" />
        <result column="f_memo" property="memo" />
        <result column="f_priority" property="priority" />
        <result column="f_version" property="version" />
        <result column="f_operator" property="operator" />
        <result column="f_operator_id" property="operatorId" />
        <result column="f_create_time" property="createTime" />
        <result column="f_update_time" property="updateTime" />
    </resultMap>

    <resultMap id="VoResultMap" type="com.bosssoft.ecds.template.entity.vo.PrintTemplateVo">
        <id column="f_id" property="id" />
        <result column="f_rgn_code" property="rgnCode" />
        <result column="f_sort_id" property="sortId" />
        <result column="f_type_id" property="typeId" />
        <result column="f_agen_id_code" property="agenIdCode" />
        <result column="f_place_id" property="placeId" />
        <result column="f_name" property="name" />
        <result column="f_memo" property="memo" />
    </resultMap>

    <select id="selectTemplateVo" resultMap="VoResultMap">
        SELECT f_id, f_rgn_code, f_sort_id, f_type_id, f_agen_id_code, f_place_id, f_name, f_memo
            FROM uaa_print_template
    </select>

    <select id="selectFirstByBillCode" resultMap="BaseResultMap">
        SELECT * FROM ecds_financial.uaa_print_template
            WHERE f_rgn_code = #{rgnCode}
                AND f_type_id = #{typeId}
                AND f_sort_id = #{sortId}
            LIMIT 1;
    </select>
</mapper>
