<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bosssoft.ecds.dao.MailDao">
    <resultMap id="mailResultMap" type="mailPo">
        <id column="f_id" property="id"/>
        <result column="f_name" property="name"/>
        <result column="f_email" property="email"/>
    </resultMap>

    <select id="retrieveMailList" resultMap="mailResultMap">
        select * from f_error_admin
    </select>

    <insert id="createMail" parameterType="mailPo">
        insert into f_error_admin (f_name, f_email) value (#{name}, #{email})
    </insert>

    <update id="updateMail" parameterType="mailPo">
        update f_error_admin
        <set>
            <if test="name != null">
                f_name = #{name},
            </if>
            <if test="email != null">
                f_email = #{email},
            </if>
        </set>
        where f_id = #{id}
    </update>

    <delete id="deleteMail" parameterType="mailPo">
        delete from f_error_admin where f_id = #{id}
    </delete>
</mapper>